<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <FrameLayout
        android:id="@+id/mapContainerTrip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tripSheet">
        
        <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:src="@drawable/maps"/>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/tripSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Pemesanan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/ic_launcher_background" 
                    android:backgroundTint="#FAFAFA"> 

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Penjemputan"
                        android:textSize="10sp"
                        android:textColor="#9E9E9E"/>
                    <TextView
                        android:id="@+id/tvRouteFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMK N 5 Madiun"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Antar"
                        android:textSize="10sp"
                        android:textColor="#9E9E9E"/>
                    <TextView
                        android:id="@+id/tvRouteTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS Soedono"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="10sp"
                        android:textColor="#9E9E9E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp15.000"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FAFAFA"
                android:layout_marginBottom="24dp">
                 
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center_vertical"
                     android:padding="16dp">
                     
                     <ImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:src="@drawable/ic_user"
                         android:background="#EEEEEE"
                         android:padding="8dp"/>
                         
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Dimas Susanto"
                         android:textStyle="bold"
                         android:textSize="16sp"
                         android:layout_marginStart="16dp"/>
                 </LinearLayout>
             </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/actionContainerOnTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/btnCall"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Panggil"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="12dp"/>
                    
                 <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Pesan"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"/>
            </LinearLayout>
            
            <Button
                android:id="@+id/btnFinish"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Selesai"
                android:backgroundTint="#BDBDBD"
                app:cornerRadius="12dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

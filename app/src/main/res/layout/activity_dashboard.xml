<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Ikon Profil" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Ikon Notifikasi" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/welcome_card"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f0f0f0"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/welcome_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang,\nYanto Budiman"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp5.000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/add_balance_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add_square"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Tambah Saldo" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/order_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="8dp"
                android:text="Pesan Sekarang"
                android:backgroundTint="#d3d3d3"
                android:textColor="#808080"
                app:cornerRadius="28dp"
                app:layout_constraintTop_toBottomOf="@id/welcome_card" />

            <TextView
                android:id="@+id/last_orders_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemesanan Terakhir"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/order_button"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/last_orders_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/last_orders_title">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/order1_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_motorcycle"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:contentDescription="Ikon Motor" />

                        <TextView
                            android:id="@+id/order1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem Ipsum"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"
                            app:layout_constraintTop_toTopOf="@id/order1_icon"
                            app:layout_constraintBottom_toBottomOf="@id/order1_icon"
                            app:layout_constraintStart_toEndOf="@id/order1_icon" />

                        <TextView
                            android:id="@+id/order1_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From: PNM"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/order1_icon"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/order1_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To: PNM"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/order1_from"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/order1_price_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga:"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/order1_to"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/order1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp10.000"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="4dp"
                            app:layout_constraintTop_toTopOf="@id/order1_price_label"
                            app:layout_constraintBottom_toBottomOf="@id/order1_price_label"
                            app:layout_constraintStart_toEndOf="@id/order1_price_label" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintTop_toBottomOf="@id/order1_from"
                            app:layout_constraintStart_toStartOf="parent"
                            android:contentDescription="Ikon Panah" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/order2_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_car"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:contentDescription="Ikon Mobil" />

                        <TextView
                            android:id="@+id/order2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem Ipsum"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"
                            app:layout_constraintTop_toTopOf="@id/order2_icon"
                            app:layout_constraintBottom_toBottomOf="@id/order2_icon"
                            app:layout_constraintStart_toEndOf="@id/order2_icon" />

                        <TextView
                            android:id="@+id/order2_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From: PNM"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/order2_icon"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/order2_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To: PNM"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/order2_from"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/order2_price_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga:"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/order2_to"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/order2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp20.000"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="4dp"
                            app:layout_constraintTop_toTopOf="@id/order2_price_label"
                            app:layout_constraintBottom_toBottomOf="@id/order2_price_label"
                            app:layout_constraintStart_toEndOf="@id/order2_price_label" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintTop_toBottomOf="@id/order2_from"
                            app:layout_constraintStart_toStartOf="parent"
                            android:contentDescription="Ikon Panah" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/promo_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/last_orders_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_lines"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="Ikon Menu/Filter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/promo_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f0f0f0"
                app:layout_constraintTop_toBottomOf="@id/promo_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="#e0e0e0"
                        android:contentDescription="Gambar Promo 1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum Dolor Amet"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/promo_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f0f0f0"
                app:layout_constraintTop_toBottomOf="@id/promo_card1"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="#e0e0e0"
                        android:contentDescription="Gambar Promo 2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum Dolor Amet"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:src="@drawable/ic_home" android:contentDescription="Beranda" />
        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:src="@drawable/ic_history" android:contentDescription="Riwayat" />
        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:src="@drawable/ic_chat" android:contentDescription="Pesan" />
        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:src="@drawable/ic_settings" android:contentDescription="Pengaturan" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>